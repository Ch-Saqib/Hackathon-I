{
  "buildCommand": "prisma generate && npm run build",
  "outputDirectory": "build",
  "installCommand": "pnpm install",
  "regions": ["iad1"],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api/auth/:path*", "destination": "/api/auth/[...all]" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
