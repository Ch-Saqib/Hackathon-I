# Physical AI Textbook - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Gemini Configuration (Required for RAG Chatbot)
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# Qdrant Vector Database (Required for RAG)
# Get credentials from https://cloud.qdrant.io/
# =============================================================================
QDRANT_URL=https://your-cluster.us-east4-0.gcp.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# =============================================================================
# Neon PostgreSQL Database (Required for User Auth)
# Get connection string from https://neon.tech/
# =============================================================================
NEON_DATABASE_URL=postgres://user:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# =============================================================================
# Better Auth Configuration (Required for Authentication)
# =============================================================================
# Base URL of your application (used by Better Auth for callbacks)
BETTER_AUTH_URL=http://localhost:3000

# Secret key for Better Auth - Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=generate-a-random-32-character-string-here


# =============================================================================
# API Configuration
# =============================================================================
# Local development
API_BASE_URL=http://localhost:8000

# Production (uncomment and update for deployment)
# API_BASE_URL=https://physical-ai-api.onrender.com

# =============================================================================
# Frontend Configuration (for React/Docusaurus)
# =============================================================================
REACT_APP_API_URL=http://localhost:8000

# =============================================================================
# CORS Configuration (for production backend)
# =============================================================================
# Set to your GitHub Pages URL for production CORS
FRONTEND_URL=http://localhost:3000
GITHUB_PAGES_URL=https://yourusername.github.io/Hackathon-I

